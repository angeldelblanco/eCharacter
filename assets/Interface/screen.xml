					</panel>
				</panel>
				<panel id="characterPanel" height="100%" width="30%" childLayout="vertical" backgroundImage="Interface/CuadroAzul.png">
					<panel id="panel_image" height="80%" width="80%" align="center" childLayout="vertical">
						<!-- Character's Image -->
						<panel height="10%" width="100%">
						<!-- Space -->
						</panel>
						<panel id="t01" height="26%" width="100%" childLayout="horizontal">
							<panel id="t0" height="100%" width="47.5%" childLayout="vertical">
							
							</panel>
							<panel height="100%" width="5%">
							<!-- Space -->
							</panel>
							<panel id="t1" height="100%" width="47.5%" childLayout="vertical">
							
							</panel>
						</panel>
						<panel height="5%" width="100%">
						<!-- Space -->
						</panel>
						<panel id="t23" height="26%" width="100%" childLayout="horizontal">
							<panel id="t2" height="100%" width="47.5%" childLayout="vertical">
							
							</panel>
							<panel height="100%" width="5%">
							<!-- Space -->
							</panel>
							<panel id="t3" height="100%" width="47.5%" childLayout="vertical">
							
							</panel>
						</panel>
						<panel height="5%" width="100%">
						<!-- Space -->
						</panel>
						<panel id="t45" height="26%" width="100%" childLayout="horizontal">
							<panel id="t4" height="100%" width="47.5%" childLayout="vertical">
							
							</panel>
							<panel height="100%" width="5%">
							<!-- Space -->
							</panel>
							<panel id="t5" height="100%" width="47.5%" childLayout="vertical">
							
							</panel>
						</panel>
					</panel>
					<panel id="panel_change" height="20%" width="80%" align="center" childLayout="horizontal">
						<image id="leftT" filename="${CALL.getButton(left)}" height="50%" width="33%" valign="center" align="left">
								<interact onClick="changeCharacterPage(-,same)"/>
						</image>
						<panel height="50%" width="34%">
						<!-- Space -->
						</panel>
						<image id="rightT" filename="${CALL.getButton(right)}" height="50%" width="33%" valign="center" align="right">
								<interact onClick="changeCharacterPage(+,same)"/>
						</image>
					</panel>
				</panel>
			</panel>
			<!-- Change screen Panel -->
			<panel id="panel_change_screen" height="15%" width="30%" childLayout="center" align="right">
				<panel id="panel_screenright" height="66%" width="33%" childLayout="center" valign="center" backgroundImage="${CALL.getButton(next)}">
					<text id="nextText" text="" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
					<interact onClick="loadFirstScreen()"/>
				</panel>
			</panel>
        </layer>
    </screen>
  
