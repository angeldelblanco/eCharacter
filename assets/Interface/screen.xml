			</panel>
			<panel id="familyPanel" height="10%" width="100%" childLayout="horizontal"> 
				<panel height="100%" width="25%">
					<!-- Space -->
				</panel>
			</panel>
			<panel height="70%" width="100%" childLayout="horizontal">
				<panel height="100%" width="5%">
					<!-- Space -->
				</panel>
