<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <style id="nifty-checkbox-style#panel">
    <attributes width="26px" height="27px" childLayout="center"/>
    <effect>
      <onFocus name="imageOverlayPulsate" post="true" period="1100" filename="grey-style/checkbox/grey-checkbox-hover.png" />
      <onActive name="imageOverlay" post="false" filename="grey-style/checkbox/grey-checkbox.png" />
    </effect>
  </style>
  
  <style id="nifty-checkbox-style#select">
    <effect overlay="true">
      <onCustom customKey="show" name="imageSize" startSize="2.0" endSize="1.0" length="250" />
      <onCustom customKey="show" name="fade" start="#0" end="#f" length="250" />
      <onCustom customKey="hide" name="fade" start="#f" end="#0" length="250" neverStopRendering="true"/>
      <onActive name="imageOverlay" filename="grey-style/checkbox/grey-checkmark.png" width="26px" height="27px" />
    </effect>
  </style>
</nifty-styles>
