<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <!-- the background of the textfield -->
  <style id="nifty-textfield#panel">
    <attributes childLayout="overlay" height="27px" />
  </style>

  <!-- the actual input field -->
  <style id="nifty-textfield#field">
    <attributes childLayout="center" visibleToMouse="true" childClip="true" padding="3px,7px,3px,7px" />
    <effect>
      <onClick name="focus" />
      <onFocus name="imageOverlayPulsate" post="false" period="1100" filename="grey-style/textfield/grey-textfield-hover.png" imageMode="resize:13,6,13,12,13,6,13,3,13,6,13,12" />
      <onActive name="imageOverlay" post="false" filename="grey-style/textfield/grey-textfield.png" imageMode="resize:13,6,13,12,13,6,13,3,13,6,13,12" />
    </effect>
  </style>

  <!-- the text in the input field -->
  <style id="nifty-textfield#text" base="base-font">
    <attributes color="#aaaf" selectionColor="#f00f" visibleToMouse="false" align="left" valign="center" textHAlign="left" />
  </style>

  <!-- the cursor is rendered in a separate layer on top of the input field and this is the parent panel of this -->
  <style id="nifty-textfield#cursor-panel">
    <attributes childLayout="absolute" padding="0px,7px,1px,7px" />
  </style>

  <!-- the actual cursor -->
  <style id="nifty-textfield#cursor">
    <attributes filename="grey-style/textfield/grey-textfield-cursor-empty.png" />
    <effect>
      <onActive name="imageOverlayPulsate" period="550" pulsateType="sin" filename="grey-style/textfield/grey-textfield-cursor.png" post="true"/>
    </effect>
  </style>
</nifty-styles>
