<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <style id="nifty-listbox">
    <attributes childLayout="vertical" visibleToMouse="true" />
  </style>

  <style id="nifty-listbox#scrollpanel">
    <attributes focusable="true" padding="3px,7px,3px,7px"/>
    <effect overlay="true">
      <onActive name="imageOverlay" filename="grey-style/listbox/grey-listbox-panel.png" imageMode="resize:15,6,15,12,15,6,15,3,15,6,15,12" post="true" />
    </effect>
  </style>

  <style id="nifty-listbox#bottom-right">
    <attributes width="27px" height="27px" />
  </style>

  <style id="nifty-listbox-item" base="nifty-label">
    <attributes controller="de.lessvoid.nifty.controls.listbox.controller.ListBoxItemController" inputMapping="de.lessvoid.nifty.input.mapping.MenuInputMapping"
                color="#000f" width="100%" align="left" textVAlign="center" textHAlign="left" />
    <interact onClick="listBoxItemClicked()" />
    <effect>
      <onCustom name="gradient" direction="vertical" neverStopRendering="true" timeType="infinite">
        <value offset="0%" color="#2220" />
        <value offset="100%" color="#555f" />
      </onCustom>
      <onCustom name="textColor" post="false" color="#ffff" neverStopRendering="true" timeType="infinite" />
      <onHover name="textColor" post="false" color="#ffff" />
    </effect>
  </style>
</nifty-styles>
