  <!-- up handle -->
  <style id="nifty-vertical-scrollbar#up">
    <attributes filename="grey-style/scrollbar/grey-scrollbar-complete.png" imageMode="sprite:27,27,23" />
    <effect>
      <onClick name="focus" targetElement="#parent"/>
      <onClick name="imageOverlay" filename="grey-style/scrollbar/grey-scrollbar-complete.png" imageMode="sprite:27,27,21" post="true" />
      <onFocus name="imageOverlay" filename="grey-style/scrollbar/grey-scrollbar-complete.png" imageMode="sprite:27,27,22" post="true" />
