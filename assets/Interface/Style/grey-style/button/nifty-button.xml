<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <!-- style for the button background panel -->
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <style id="nifty-button#panel">
    <attributes backgroundImage="grey-style/button/grey-button.png" imageMode="resize:21,94,21,15,21,94,21,1,21,94,21,15" width="136px" height="31px" childLayout="center" visibleToMouse="true" />
    <effect>
      <onFocus name="imageOverlayPulsate" filename="grey-style/button/grey-button-hover.png" imageMode="resize:21,94,21,15,21,94,21,1,21,94,21,15" post="true" />
    </effect>
  </style>

  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <!-- style for the button text -->
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <style id="nifty-button#text" base="button-font">
    <attributes align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false" color="#ffff" />
  </style>
</nifty-styles>
