				<boneController labelController="Cabeza"/>
				<boneController labelController="Torax"/>
				<boneController labelController="Muñeca Izquierda"/>
				<boneController labelController="Muñeca Derecha"/>
				<boneController labelController="Tobillo Izquierdo"/>
				<boneController labelController="Tobillo Derecho"/>
				<boneController labelController="Fémur Izquierdo"/>
				<boneController labelController="Fémur Derecho"/>
