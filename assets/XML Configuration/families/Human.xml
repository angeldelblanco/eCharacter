<?xml version="1.0" encoding="UTF-8"?>
<family xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../family.xsd">
	<metadata>
		<name>Human</name>
		<description>Esta familia est√° compuesta por 2 humanos: un chico y una chica.</description>
		<author>Alex, David y Sergio.</author>
	</metadata>
	<stages>
		<scaleStage stageLabel="Scale" idPanel="ScalePanel">
			<boneController controllerLabel="Head" idController="head"/>
			<boneController controllerLabel="Torso" idController="torso"/>
			<boneController controllerLabel="Left Arm" idController="leftArm"/>
			<boneController controllerLabel="Righ Arm" idController="rightArm"/>
			<boneController controllerLabel="Left Hand" idController="leftHand"/>
			<boneController controllerLabel="Right Hand" idController="rightHand"/>
			<boneController controllerLabel="Left Leg" idController="leftLeg"/>
			<boneController controllerLabel="Right Leg" idController="rightLeg"/>
			<boneController controllerLabel="Left Foot" idController="leftFoot"/>
			<boneController controllerLabel="Right Foot" idController="rightFoot"/>			
		</scaleStage>
		<multiStage stageLabel="Skin">
			<textureSubStage subStageLabel="Skins" idPanel="skinsPanel" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Eyes">
			<textureSubStage subStageLabel="Eyes" idPanel="eyesPanel" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="TShirt">
			<textureSubStage subStageLabel="TShirts" idPanel="tshirtsPanel" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Trousers">
			<textureSubStage subStageLabel="Trousers" idPanel="trousersPanel" multiselection="false"/>
		</multiStage>		
		<multiStage stageLabel="Shoes">
			<textureSubStage subStageLabel="Shoes" idPanel="shoesPanel" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Hair">
			<meshSubStage subStageLabel="Hairs" idPanel="hairsPanel" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Accesories">
			<textureSubStage subStageLabel="Face" idPanel="facePanel" multiselection="false"/>
			<textureSubStage subStageLabel="Accesories Face" idPanel="accesoriesFacePanel" multiselection="true"/>
			<textureSubStage subStageLabel="Other Accesories" idPanel="otherAccesoriesPanel" multiselection="true"/>
		</multiStage>
		<animationStage>
			<!-- Dar valores. Los que hay son aleatorios -->
			<fps qualityLabel="High" fpsValue="3"/>
			<fps qualityLabel="Medium" fpsValue="2"/>
			<fps qualityLabel="High" fpsValue="1"/>
			<camera cameraLabel="Front">
				<upAxis valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<location valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<direction valueX="2.0" valueY="2.0" valueZ="2.0"/>
			</camera>
			<camera cameraLabel="2D">
				<upAxis valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<location valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<direction valueX="2.0" valueY="2.0" valueZ="2.0"/>
			</camera>
		</animationStage>
	</stages>
	<modelsRef>
		<modelRef>
			<modelLabel>Boy</modelLabel>
			<iconPath>assets/Interface/Icons/eAdventure/man.png</iconPath>
			<modelPath>assets/XML Configuration/models/Man.xml</modelPath>
		</modelRef>
		<modelRef>
			<modelLabel>Girl</modelLabel>
			<iconPath>assets/Interface/Icons/eAdventure/woman.png</iconPath>
			<modelPath>assets/XML Configuration/models/Woman.xml</modelPath>
		</modelRef>	
		<modelRef>
			<modelLabel>Young Boy</modelLabel>
			<iconPath>assets/Interface/Icons/eAdventure/young_boy.png</iconPath>
			<modelPath>assets/XML Configuration/models/YoungBoy.xml</modelPath>
		</modelRef>
		<modelRef>
			<modelLabel>Young Girl</modelLabel>
			<iconPath>assets/Interface/Icons/eAdventure/young_girl.png</iconPath>
			<modelPath>assets/XML Configuration/models/YoungWoman.xml</modelPath>
		</modelRef>
	</modelsRef>
</family>
