			<multiStage stageName="Pantalón">
				<textureStage subStageName="Pantalones" idPanel="panelPantalones" textureChangeControl="true" multiselection="false"/>
			</multiStage>
			
			<multiStage stageName="Zapatos">
				<textureStage subStageName="Zapatos" idPanel="panelZapatos" textureChangeControl="true" multiselection="false"/>
			</multiStage>

			<multiStage stageName="Pelo">
				<meshStage subStageName="Pelos" idPanel="panelPelos" meshChangeControl="true" multiselection="false"/>
			</multiStage>
			<animationStage>
				<fps qualityName="High" FPSValue="2"/>
				<camera cameraName="Delante" cameraValue="5"/>
			</animationStage>
