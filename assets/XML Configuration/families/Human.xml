<?xml version="1.0" encoding="UTF-8"?>
<family xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../family.xsd">
	<metadata>
		<name>Human</name>
		<description>Esta familia está compuesta por 2 humanos: un chico y una chica.</description>
		<author>Alex, David y Sergio.</author>
	</metadata>
	<stages>
		<scaleStage stageName="Escalado" idPanel="panelEscalado">
			<boneController controllerName="Cabeza" idController="cabeza"/>
			<boneController controllerName="Torax" idController="torax"/>
			<boneController controllerName="Muñeca Izquierda" idController="muniecaIzq"/>
			<boneController controllerName="Muñeca Derecha" idController="muniecaDer"/>
			<boneController controllerName="Tobillo Izquierdo" idController="tobilloIzq"/>
			<boneController controllerName="Tobillo Derecho" idController="tobilloDer"/>
			<boneController controllerName="Fémur Izquierdo" idController="femurIzq"/>
			<boneController controllerName="Fémur Derecho" idController="femurDer"/>
			<boneController controllerName="Clavícula Izquierda" idController="claviculaIzq"/>
			<boneController controllerName="Clavícula Derecha" idController="claviculaDer"/>
		</scaleStage>
		<multiStage stageName="Piel">
			<textureSubStage subStageName="Pieles" idPanel="panelPieles" multiselection="false"/>
		</multiStage>
		<multiStage stageName="Ojos">
			<textureSubStage subStageName="Ojos" idPanel="panelOjos" multiselection="false"/>
		</multiStage>
		<multiStage stageName="Camiseta">
			<textureSubStage subStageName="Camisetas" idPanel="panelCamisetas" multiselection="false"/>
		</multiStage>
		<multiStage stageName="Pantalón">
			<textureSubStage subStageName="Pantalones" idPanel="panelPantalones" multiselection="false"/>
		</multiStage>
		
		<multiStage stageName="Zapatos">
			<textureSubStage subStageName="Zapatos" idPanel="panelZapatos" multiselection="false"/>
		</multiStage>

		<multiStage stageName="Pelo">
			<meshSubStage subStageName="Pelos" idPanel="panelPelos" multiselection="false"/>
		</multiStage>
		<animationStage>
			<!-- Dar valores. Los que hay son aleatorios -->
			<fps qualityName="High" fpsValue="2"/>
			<camera cameraName="Delante">
				<upAxis valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<location valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<direction valueX="2.0" valueY="2.0" valueZ="2.0"/>
			</camera>
		</animationStage>
	</stages>
	<modelsRef>
		<modelRef>
			<modelName>Chico</modelName>
			<iconPath>Interface/man.png</iconPath>
			<modelPath>assets/XML Configuration/models/Man.xml</modelPath>
		</modelRef> 
		<modelRef>
			<modelName>Chica</modelName>
			<iconPath>Interface/woman.png</iconPath>
			<modelPath>assets/XML Configuration/models/Woman.xml</modelPath>
		</modelRef> 
	</modelsRef>
</family>
