<?xml version="1.0" encoding="UTF-8"?>
<family xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../family.xsd">
	<metadata>
		<name>Dogs</name>
		<description>Esta familia está compuesta por 2 perros: un yorkshire y un samoyedo.</description>
		<author>Sergio.</author>
	</metadata>
	<stages>
		<scaleStage stageLabel="Escalado" idPanel="panelEscalado">
			<boneController controllerLabel="Cabeza" idController="cabeza"/>
			<boneController controllerLabel="Torax" idController="torax"/>
			<boneController controllerLabel="Muñeca Izquierda" idController="muniecaIzq"/>
			<boneController controllerLabel="Muñeca Derecha" idController="muniecaDer"/>
			<boneController controllerLabel="Tobillo Izquierdo" idController="tobilloIzq"/>
			<boneController controllerLabel="Tobillo Derecho" idController="tobilloDer"/>
			<boneController controllerLabel="Fémur Izquierdo" idController="femurIzq"/>
			<boneController controllerLabel="Fémur Derecho" idController="femurDer"/>
			<boneController controllerLabel="Clavícula Izquierda" idController="claviculaIzq"/>
			<boneController controllerLabel="Clavícula Derecha" idController="claviculaDer"/>
		</scaleStage>
		<multiStage stageLabel="Piel">
			<textureSubStage subStageLabel="Pieles" idPanel="panelPieles" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Ojos">
			<textureSubStage subStageLabel="Ojos" idPanel="panelOjos" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Camiseta">
			<textureSubStage subStageLabel="Camisetas" idPanel="panelCamisetas" multiselection="false"/>
		</multiStage>
		<multiStage stageLabel="Pantalón">
			<textureSubStage subStageLabel="Pantalones" idPanel="panelPantalones" multiselection="false"/>
		</multiStage>
		
		<multiStage stageLabel="Zapatos">
			<textureSubStage subStageLabel="Zapatos" idPanel="panelZapatos" multiselection="false"/>
		</multiStage>

		<multiStage stageLabel="Pelo">
			<meshSubStage subStageLabel="Pelos" idPanel="panelPelos" multiselection="false"/>
		</multiStage>
		<animationStage>
			<!-- Dar valores. Los que hay son aleatorios -->
			<fps qualityLabel="High" fpsValue="2"/>
			<camera cameraLabel="Delante">
				<upAxis valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<location valueX="2.0" valueY="2.0" valueZ="2.0"/>
				<direction valueX="2.0" valueY="2.0" valueZ="2.0"/>
			</camera>
		</animationStage>
	</stages>
	<modelsRef>
		<modelRef>
			<modelLabel>Yorkshire</modelLabel>
			<iconPath>Interface/yorkshire.png</iconPath>
			<modelPath></modelPath>
		</modelRef> 
		<modelRef>
			<modelLabel>Samoyedo</modelLabel>
			<iconPath>Interface/samoyedo.png</iconPath>
			<modelPath></modelPath>
		</modelRef> 
	</modelsRef>
</family>
